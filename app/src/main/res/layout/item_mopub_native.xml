<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_unit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/relative_layout_item_imge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp">

                        <ImageView
                            android:layout_margin="5dp"
                            android:padding="3dp"
                            android:id="@+id/native_ad_icon_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />

                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp">

                            <TextView
                                android:id="@+id/native_ad_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:lines="1"
                                android:textColor="@color/primary_text"
                                android:textSize="15sp" />
                            <TextView
                                android:id="@+id/native_ad_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:lines="1"
                                android:textColor="@color/primary_text_light"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:elevation="1dp"
                            android:id="@+id/native_ad_main_image"
                            android:layout_width="match_parent"
                            android:minHeight="200dp"
                            android:layout_height="200dp"
                            android:gravity="center" />
                        <ImageView

                            android:layout_margin="3dp"
                            android:layout_alignParentRight="true"
                            android:elevation="2dp"
                            android:id="@+id/native_ad_privacy_information_icon_image"
                            android:gravity="end"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="10dp"
                            android:orientation="horizontal" />

                        <TextView
                            android:id="@+id/native_sponsored_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="#f4a60b"
                            android:elevation="2dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:padding="3dp"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:elevation="7dp"
                android:gravity="center|top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <Button
                        android:textStyle="bold"
                        android:id="@+id/native_cta"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/bg_loading_subtitles_accent"
                        android:paddingLeft="35dp"
                        android:paddingRight="35dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="Ver mÃ¡s"
                        android:fontFamily="@font/google_sans"
                        android:visibility="visible" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
